@using Lecturers
@model Lecturers.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login Form Responsive Widget Template:: W3layouts</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="login form responsive widget,login form widgets, sign up web forms , login signup responsive web form,flat pricing table,flat drop downs,registration forms,news letter forms,elements" />
    <script type="application/x-javascript">
         addeventlistener("load", function() { settimeout(hideurlbar, 0); }, false);
        function hideurlbar(){ window.scrollto(0,1); } </script>

    <link href="/smartlogin/css/style.css" rel="stylesheet" type="text/css" media="all">

    <link href="//fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900iSlabo+27px&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">

</head>

<style>
    

    .main {
        color: #000000;
        width: 20%;
        margin: 50px auto;
        box-shadow: 1px 2px 5px rgb(0 0 0 / 40%);
        padding: 80px 40px;
        border-radius: 8px;
        text-align:center;
    }

    .form-group {
        width: 100%;
        margin: auto;
        display: block;
    }

    .form-control {
        width: 95%;
        height: 30px;
        margin-top: 70px;
        outline: none;
        padding: 0 0 0 10px;
    }

    .submit {
        margin-top: 20px;
        width: 100%;
        height: 30px;
        border: none;
        background-color: green;
        color: #fff;
        cursor: pointer;
        border-radius: 10px;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    .text-danger {
        color: red;
    }
    hr {
        margin:0px;
    }

</style>
<body>


    <div class="main">
        <h1 class="center">Forgot Password </h1>
        
        @using (Html.BeginForm())


        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.TextBoxFor(m => m.UserEmail, new { @class = "form-control", @placeholder = "E-Mail" })
                @Html.ValidationMessageFor(m => m.UserEmail, "", new { @class = "text-danger" })
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group center">
                <input class="submit" type="submit" value="submit" name="login">
            </div>
            <div class="form-group">
                <p>Don't have an acount?'<a href="~/Users/Login">Login?</a></p>
                
            </div>
        }

    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


