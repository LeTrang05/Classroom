@using Lecturers
@model Lecturers.classModel.Class.CreateClass
@{
    Layout = null;
}
@{
    ViewBag.Title = "MyClass";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MyClass</h2>



<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login Form Responsive Widget Template:: W3layouts</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="login form responsive widget,login form widgets, sign up web forms , login signup responsive web form,flat pricing table,flat drop downs,registration forms,news letter forms,elements" />
</head>

<style>



    .main {
        color: #000000;
        width: 20%;
        margin: 50px auto;
        box-shadow: 1px 2px 5px rgb(0 0 0 / 40%);
        padding: 70px 40px;
        border-radius: 8px;
    }

    .form-group {
        width: 100%;
        margin: auto;
        display: block;
        margin-top: 30px;
    }

    .form-control, .submit {
        width: 100%;
        height: 30px;
        outline: none;
        padding: 0;
    }

    .form-control-flex {
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
    }

    .submit {
        border: none;
        background-color: green;
        color: #fff;
        cursor: pointer;
        border-radius: 10px;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    .text-danger {
        color: red;
    }

    .center {
        text-align: center;
    }
</style>
<body>



    <div class="main">
        <h1 class="center">Login </h1>

        @using (Html.BeginForm())


        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.TextBoxFor(m => m.ClassName,new { @class = "form-control", @placeholder = "E-Mail" })
                @Html.ValidationMessageFor(m => m.ClassName, "", new { @class = "text-danger" })
            </div>


            <div class="form-group">
                @Html.TextBoxFor(m => m.ClassMaLop, new { type = "password", @class = "form-control", @placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.ClassMaLop, "", new { @class = "text-danger" })
            </div>


            <div class="form-group form-control-flex">
                <p><a href="~/Users/FogotPassword">Forgot Password?</a></p>
                <p><a href="~/Users/Registers">Register Now</a></p>
            </div>


            <div class="form-group center">
                <input class="submit" type="submit" value="Login" name="login">
            </div>
        }

    </div>


</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


