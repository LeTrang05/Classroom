@using Lecturers
@using Lecturers.Models
@model Lecturers.classModel.Class.CreateClass

@{
    ViewBag.Title = "CreateClass";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var session = Session["UserId"] as User;

}



<h2>CreateClass</h2>

<style>



    .main {
        color: #000000;
        width: 50%;
        margin: 50px auto;
        box-shadow: 1px 2px 5px rgb(0 0 0 / 40%);
        padding: 70px 40px;
        border-radius: 8px;
    }

    .form-group {
        width: 100%;
        margin: auto;
        display: block;
        margin-top: 30px;
    }

    .form-control, .submit {
        width: 100%;
        height: 30px;
        outline: none;
        padding: 0;
    }

    .form-control-flex {
        display: flex;
        justify-content: space-between;
        margin-bottom: 50px;
    }

    .submit {
        border: none;
        background-color: green;
        color: #fff;
        cursor: pointer;
        border-radius: 10px;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    .text-danger {
        color: red;
    }

    .center {
        text-align: center;
    }
</style>
<body>

    <div class="main">
        <h1 class="center">Create Class </h1>

        @using (Html.BeginForm())

        {
            @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextBox("UserID", session.UserID, new { @class = "form-control", @placeholder = "Class Name" })
       
        @Html.ValidationMessageFor(m => m.TeacherId, "", new { @class = "text-danger" })
    </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.ClassName, new { @class = "form-control", @placeholder = "Class Name" })
                @Html.ValidationMessageFor(m => m.ClassName, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.TextBoxFor(m => m.ClassMaLop, new { @class = "form-control", @placeholder = "Mã Lớp" })
                @Html.ValidationMessageFor(m => m.ClassMaLop, "", new { @class = "text-danger" })
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group center">
                <input class="submit" type="submit" value="CreateClass" name="CreateClass">
            </div>
        }

    </div>


</body>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
